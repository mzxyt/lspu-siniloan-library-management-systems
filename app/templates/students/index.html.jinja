<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LSPU</title>
    <link rel="shortcut icon" href="{{url_for('static',filename='images/lspu_seal-6 1.png')}}" type="image/x-icon">
    <link rel="stylesheet" href="{{url_for('static',filename='css/custom.css')}}">
    <link rel="stylesheet" href="{{url_for('static',filename='css/user.css')}}">
</head>

<body>
    <nav class="navbar navbar-dark bg-primary" id="navbar">
        <div class="container">
            <a href="{{url_for('index')}}" class="navbar-brand">
                <img src="{{url_for('static',filename='images/lspu_seal-6 1.png')}}" alt="logo"
                    class="logo img-fluid me-1">
                <span class="d-none d-lg-inline d-md-inline">LSPU Library E-Access</span>
            </a>

        </div>
    </nav>

    <main class="pt-0">
        <div class="container py-5">
            <div class="row justify-content-center mt-lg-4 mt-0">
                <div class="col-md-7">
                    <img src="{{url_for('static',filename='images/image.png')}}" alt="" class="img-fluid">
                </div>
            </div>
            <div class="text-center mt-lg-4 mt-5">
                <h3 class="fw-bold">LOGIN</h3>
            </div>
            <div class="mt-2">

                <div class="row justify-content-center">
                    <div class="col-md-5">
                        {% for message in get_flashed_messages(category_filter=["error"]) %}
                        <div class="text-start flash alert alert-danger mb-3"><i class="bx bx-info-circle me-1"></i> {{
                            message }}
                        </div>
                        {% endfor %}
                        <form action="{{url_for('student_auth.login')}}" method="post">
                            <div class="mb-3">
                                <label for="" class="fw-bold form-label">Student ID No:</label>
                                <input type="text" name="student_id" id="" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="" class="fw-bold form-label">Password:</label>
                                <input type="password" name="password" id="" class="form-control">
                            </div>
                            <a href="#" class="link-primary">Forgot Password?</a>

                            <div class="mt-3 text-center">
                                <button class="btn btn-primary px-lg-4 rounded-pill" type="submit">LOGIN</button>
                            </div>
                            <p class="mt-4 text-secondary text-center">
                                Donâ€™t forget to request an ID first before you login
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener('contextmenu', function (e) {
            alert("Sorry, right click is disabled to prevent leakage of confidential functions");
            e.preventDefault();
        });
    </script>
</body>

</html>